<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="service.osmc.settings"
       name="My OSMC"
       version="0.0.2"
       provider-name="OSMC (KodeKarnage)">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script"
            library="default.py">
            <provides>executable</provides>
    </extension>
    <extension point="xbmc.service"
            library="service.py"
            start="login">
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">My OSMC</summary>
        <description lang="en_GB">My OSMC Setting manager</description>
        <language>en_GB</language>
        <platform>all</platform>
        <license>GNU GPLv2</license>
        <source>https://osmc.tv</source>
    </extension>
</addon>
